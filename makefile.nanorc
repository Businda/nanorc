syntax "makefile" "[Mm]akefile[^/]*$" "\.mk$"

OPERATOR: "[:=,]"
KEYWORD:  "\<(ifeq|ifdef|ifneq|ifndef|else|endif)\>"
FUNCTION: "^[^   ]+:"
STRING:   "\"(\\.|[^\\\"])*\"|'(\\.|[^\\'])*'"
VARIABLE: "\$+[{(][a-zA-Z0-9_-]+[})]"
VARIABLE: "\$[@^<*]"
ESCAPE:   "\\.?"
COMMENT:  "(\s|^|@)#.*$"

# Don't expand tabs to spaces
unset tabstospaces

# Show trailing whitespace
color ,green "[[:space:]]+$"
