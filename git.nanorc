syntax "gitconfig" "git(config|modules)$|\.git/config$"

+BOOLEAN
+INI
+STRING
+HASHCOMMENT
+LINT

syntax "git-editmsg" "(COMMIT|TAG)_EDITMSG$"

ESCAPE:   "\\."
+HASHCOMMENT
+LINT

syntax "git-rebase" "git-rebase-todo$"

KEYWORD: "^(edit|fixup|pick|reword|squash|exec|[efprsx])\>"
NUMBER:  "\<[0-9a-f]{7,40}\>"
+HASHCOMMENT
